<section class="faq" id="faq-host">
  <div class="gl__page-content">
    <h2 class="gl__title">Вопросы и ответы</h2>

    <ul class="faq__list-wrapper">
      {{#each faq }}
        <li class="faq__item">
          <button type="button" class="faq__item-btn-wrapper gl__drop-menu-btn js-drop-menu-btn">
            <svg width="24" height="24" aria-hidden="true" class="faq__item-btn-icon gl__drop-menu-icon">
              <use xlink:href="#arrow-down"></use>
            </svg>
            {{ this.title }}
          </button>

          <div class="faq__item-content-wrapper gl__drop-menu">
            {{#each text }}
              <p class="faq__item-content-text">{{ this }}</p>
            {{/each}}
          </div>
        </li>
      {{/each}}
    </ul>

    <a href="" class="faq__link-show-all">
      Все вопросы и ответы
      <svg width="20" height="20" aria-hidden="true" class="faq__link-show-all-icon">
        <use xlink:href="#arrow-right"></use>
      </svg>
    </a>
  </div>
</section>
