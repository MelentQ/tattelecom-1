<section class="b-advantages-opportunities" id="b-advantages-opportunities-host">
  <div class="gl__page-content">
    <h2 class="gl__title">
      {{ advantages-opportunities.titleComponent }}
    </h2>
  </div>

  <div class="gl-slider js-swiper" data-swiper-slides-preview="3">
    {{> common/controls/b-btns-slider }}
    <div class="gl__page-content">
      <div class="b-advantages-opportunities__container gl-slider__container swiper-container js-swiper-container">
        <div class="gl-slider__wrapper swiper-wrapper">
          {{#each advantages-opportunities.items }}
            <div class="b-advantages-opportunities__slide swiper-slide">
              <div class="b-advantages-opportunities__slide-header">
                <img src="{{ this.img }}" alt="" class="b-advantages-opportunities__slide-img">
                <div class="b-advantages-opportunities__slide-title">
                  {{ this.title }}
                </div>
              </div>
              <div class="b-advantages-opportunities__slide-content">
                {{#if this.text }}
                  {{ this.text }}
                {{/if}}
                {{#if this.list }}
                  <ul class="b-advantages-opportunities__slide-list">
                    {{#each this.list }}
                      <li class="b-advantages-opportunities__slide-item">
                        <svg width="20" height="16" aria-hidden="true" class="b-advantages-opportunities__slide-item-icon">
                          <use xlink:href="#checkbox-checked"></use>
                        </svg>
                        {{ this }}
                      </li>
                    {{/each}}
                  </ul>
                {{/if}}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
