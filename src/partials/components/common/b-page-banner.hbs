<section class="b-page-banner {{#if banner.mobile}}mobile-version-available{{/if}}">
  <div class="gl__page-content">
    <h2 class="gl__title">{{title}}</h2>

    <div class="b-page-banner__content">
      <picture>
        {{#if banner.mobile.image}}
          <source srcset="img/common/b-page-banners/{{banner.mobile.image}}" media="(max-width: 559px)">
        {{/if}}
        <img class="b-page-banner__image" src="img/common/b-page-banners/{{banner.image}}" alt="{{title}}">
      </picture>
      <div class="b-page-banner__text">
        <h3 class="b-page-banner__title {{banner.title.colorClass}}">
          {{#if banner.mobile.title}}
            <span class="b-page-banner__mobile-title {{#if
              banner.title.colorTitleTextBlue }}mod-blue{{/if}}">{{{banner.mobile.title}}}</span>
          {{/if}}
          {{#if banner.title.accentText }}
            <span class="b-page-banner__accent-title {{#if
              banner.title.colorAccentTextBlue }}mod-blue{{/if}}">{{{banner.title.accentText}}}</span>
          {{/if}}
          {{#if banner.title.text }}
            <span class="b-page-banner__desktop-title {{#if
              banner.title.colorTextBlue }}mod-blue{{/if}}">{{{banner.title.text}}}</span>
          {{/if}}
          {{#if banner.title.subtitle }}
            <span class="b-page-banner__desktop-subtitle {{#if
              banner.title.colorSubtitleBlue }}mod-blue{{/if}}">{{{banner.title.subtitle}}}</span>
          {{/if}}
        </h3>
        {{#if banner.cost }}
          <div class="b-page-banner__cost-block">
            <span class="b-page-banner__cost-label">от</span>
            <div class="b-page-banner__cost-bottom">
              <span class="b-page-banner__cost">{{banner.cost}}</span>
              <span class="b-page-banner__cost-label">₽/мес.</span>
            </div>
          </div>
        {{/if}}
        <span class="b-page-banner__label">{{banner.label}}</span>
      </div>
    </div>
  </div>
</section>
