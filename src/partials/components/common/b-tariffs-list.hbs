<section class="b-tariffs-list">
  <div class="gl__page-content">
    <h2 class="gl__title">Тарифы</h2>
  </div>

  <div class="b-tariffs-list__content">
    <div class="gl-slider js-swiper-4">
      {{> common/controls/b-btns-slider }}
      <div class="gl__page-content">
        <div class="gl-slider__container swiper-container js-swiper-container-4 b-tariffs-list__slider">
          <ul class="gl-slider__wrapper swiper-wrapper" id="js-align-tariffs-heights">
            {{#each tariffs }}
            <li class="swiper-slide b-tariffs-item">
              <div>
                <h3 class="b-tariffs-item__name">{{this.name}}</h3>
                <ul class="b-tariffs-item__services-list">
                  {{#if this.services.calls}}
                  <li class="b-tariffs-item__service">
                    <svg width="15" height="15" aria-hidden="true" class="b-tariffs-item__service-icon">
                      <use xlink:href="#tariffs-calls"></use>
                    </svg>
                    <span class="b-tariffs-item__service-name">{{this.services.calls}}</span>
                  </li>
                  {{/if}}
                  {{#if this.services.internet}}
                  <li class="b-tariffs-item__service">
                    <svg width="15" height="11" aria-hidden="true" class="b-tariffs-item__service-icon">
                      <use xlink:href="#tariffs-internet"></use>
                    </svg>
                    <span class="b-tariffs-item__service-name">{{this.services.internet}}</span>
                  </li>
                  {{/if}}
                  {{#if this.services.callsRT}}
                  <li class="b-tariffs-item__service">
                    <svg width="14" height="14" aria-hidden="true" class="b-tariffs-item__service-icon">
                      <use xlink:href="#tariffs-calls-rt"></use>
                    </svg>
                    <span class="b-tariffs-item__service-name">{{this.services.callsRT}}</span>
                  </li>
                  {{/if}}
                  {{#if this.services.callsRF}}
                  <li class="b-tariffs-item__service">
                    <svg width="14" height="14" aria-hidden="true" class="b-tariffs-item__service-icon">
                      <use xlink:href="#tariffs-calls-rf"></use>
                    </svg>
                    <span class="b-tariffs-item__service-name">{{this.services.callsRF}}</span>
                  </li>
                  {{/if}}
                  {{#if this.services.SMS}}
                  <li class="b-tariffs-item__service">
                    <svg width="15" height="15" aria-hidden="true" class="b-tariffs-item__service-icon">
                      <use xlink:href="#tariffs-sms"></use>
                    </svg>
                    <span class="b-tariffs-item__service-name">{{this.services.SMS}}</span>
                  </li>
                  {{/if}}
                </ul>
              </div>
              <div class="b-tariffs-item__footer">
                <div class="b-tariffs-item__cost-block">
                  <span class="b-tariffs-item__cost">{{this.cost}}</span>
                  <span class="b-tariffs-item__cost-label">₽/мес</span>
                </div>
                <button class="gl__main-btn mod-business b-tariffs-item__btn" type="button">Подключить</button>
                <button class="b-tariffs-item__secondary-btn" type="button">Подробнее о тарифе</button>
              </div>
            </li>
            {{/each}}
          </ul>
        </div>
      </div>
    </div>
  </div>
</section>