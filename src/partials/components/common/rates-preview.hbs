<section class="rates-preview mod-{{ pageName }}"
         {{#if imgBackgroundDesk}}style="background-image: url({{ imgBackgroundDesk }})"{{/if}}
         id="rates-preview-host">

  <div class="gl__page-content rates-preview__content-wrapper">
    <div class="rates-preview__content {{#if isWhiteBackground}}mod-white-background{{/if}}">
      {{#if ratesSecondName}}
        <div class="rates-preview__content-title">{{ ratesSecondName }}</div>
      {{/if}}
      <div class="rates-preview__content-subtitle">{{ ratesName }}</div>
      <div class="rates-preview__content-caption">{{ ratesCaption }}</div>
      <button type="button" class="gl__main-btn rates-preview__btn">{{ btnText }}</button>
    </div>

    <div class="rates-preview__img-wrapper">
      {{#if imgMobile}}
        <img src="{{ img }}" alt="" class="rates-preview__img gl__xxs-hide">
        <img src="{{ imgMobile }}" alt="" class="rates-preview__img gl__xxs-show">
      {{else}}
        <img src="{{ img }}" alt="" class="rates-preview__img">
      {{/if}}
    </div>
  </div>
</section>
