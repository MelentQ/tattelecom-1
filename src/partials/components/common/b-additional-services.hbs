<section class="b-additional-services">
  <div class="gl__page-content">
    <div class="b-additional-services__content">
      <h2 class="gl__title">Дополнительные услуги</h2>

      <ul class="b-additional-services__list">
        {{#each additionalServices }}
        <li class="b-additional-services__item">
          {{#if this.name }}
            <div class="b-additional-services__btn-label">
              {{this.name}}
            </div>
          {{/if}}
          <ul class="b-additional-services__content-list">
            {{#each this.serviceList }}
              <li class="b-additional-services__content-item">
                <div class="b-additional-services__content-item-name-container">
                  <span class="b-additional-services__content-item-name">{{this.name}}</span>
                  {{> common/btn-info content-info=this.name }}
                </div>
                <span class="b-additional-services__content-item-cost">{{{this.cost}}}</span>
              </li>
            {{/each}}
          </ul>
        </li>
        {{/each}}
      </ul>
    </div>
  </div>
</section>
