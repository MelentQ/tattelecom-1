<section class="b-fractional-slider gl__section" id="b-fractional-slider-{{id}}-host">
  <div class="gl__page-content">
    {{#if sectionTitle }}
      <h2 class="gl__title">
        {{ this.sectionTitle }}
      </h2>
    {{/if}}

    <div class="gl-slider js-swiper" data-swiper-slides-preview="auto" data-swiper-gap="20">
      {{> common/controls/b-btns-slider }}
      <div class="gl-slider__b-container gl-slider__container swiper-container js-swiper-container">
        <ul class="gl-slider__wrapper swiper-wrapper">
          {{#each slidesList}}
            <li class="b-fractional-slider__slide swiper-slide">
              {{#if isFractionalList }}
                {{#each isFractionalList }}
                  {{> b-main-page/b-fractional-slider/b-fractional-slide }}
                {{/each}}
              {{ else }}
                {{> b-main-page/b-fractional-slider/b-fractional-slide }}
              {{/if}}
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>
