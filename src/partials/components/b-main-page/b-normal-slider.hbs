<section class="b-normal-slider" id="b-normal-slider-host">
  <div class="gl__page-content">
    <h2 class="gl__title">
      {{ this.sectionTitle }}
    </h2>
  </div>

  <div class="gl-slider js-swiper" data-swiper-slides-preview="2.5" data-swiper-gap="20">
    {{> common/controls/b-btns-slider }}
    <div class="gl__page-content">
      <div class="b-normal-slider__container gl-slider__container swiper-container js-swiper-container">
        <div class="gl-slider__wrapper swiper-wrapper">
          {{#each slidesList}}
            <div class="b-normal-slider__slide swiper-slide">
              <img src="{{ this.img }}" alt="" class="b-normal-slider__background">
              <div class="b-normal-slider__title {{#if isWhiteTitle }}mod-white{{/if}}">
                {{ this.title }}
              </div>
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
