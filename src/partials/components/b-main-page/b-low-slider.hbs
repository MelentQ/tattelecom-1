<section class="b-low-slider" id="b-low-slider-host">
  <div class="gl__page-content">
    <h2 class="gl__title">
      {{ this.sectionTitle }}
    </h2>
  </div>

  <div class="gl-slider js-swiper-4" data-swiper-gap="20">
    {{> common/controls/b-btns-slider }}
    <div class="gl__page-content">
      <div class="b-low-slider__container gl-slider__container swiper-container js-swiper-container-4">
        <div class="gl-slider__wrapper swiper-wrapper">
          {{#each slidesList}}
            <div class="b-low-slider__slide swiper-slide">
              <img src="{{ this.img }}" alt="" class="b-low-slider__background">
              <div class="b-low-slider__title {{#if isWhiteTitle }}mod-white{{/if}}">
                {{ this.title }}
              </div>
              {{#if this.subtitleDown }}
                <div class="b-low-slider__subtitle {{#if isWhiteSubtitle }}mod-white{{/if}}">
                  {{ this.subtitleDown }}
                </div>
              {{/if}}
            </div>
          {{/each}}
        </div>
      </div>
    </div>
  </div>
</section>
