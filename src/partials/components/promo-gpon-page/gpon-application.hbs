<section class="gpon-application" id="gpon-application-host">
  <div class="gl__page-content">
    <div class="gpon-application__content">
      <img src="img/promo-gpon-page/application-background.svg" alt="" class="gpon-application__background">
      <div class="gpon-application__title">
        Оставьте заявку на подключение прямо сейчас
      </div>

      <form data-need-validation data-parsley-validate data-parsley-focus="none"
            class="gpon-application__form">
        {{> common/controls/input-main
          required=true
          type="text"
          placeholder="Ваше имя"
          name="gpon-application-name"
        }}
        {{> common/controls/input-main
          required=true
          type="tel"
          phoneMask=true
          placeholder="+7 (___) ___-__-__"
          name="gpon-application-tel"
        }}

        <button type="submit" class="gl__main-btn mod-black">
          Отправить
        </button>
      </form>
    </div>
  </div>
</section>
