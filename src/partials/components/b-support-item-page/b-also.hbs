<section class="b-info">
  <div class="gl__page-content">
    <h2 class="gl__title">
      Смотрите также
    </h2>

    <div class="gl-slider js-swiper" data-swiper-slides-preview="5" data-swiper-gap="20">
      {{> common/controls/b-btns-slider }}
      <div class="gl-slider__container swiper-container js-swiper-container">
        <ul class="gl-slider__wrapper swiper-wrapper">
          {{#each categoriesList }}
            <li class="b-also__item swiper-slide">
              <a href="" class="b-popular-categories__item-link">
                <span class="b-popular-categories__item-title">{{ this.title }}</span>
                <span class="b-popular-categories__item-image-wrapper">
            <img src="{{ this.img }}" alt="" class="b-popular-categories__item-image">
            </span>
              </a>
            </li>
          {{/each}}
        </ul>
      </div>
    </div>
  </div>
</section>
