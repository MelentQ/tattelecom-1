<section class="b-codes-for-calls">
  <div class="gl__page-content">
    <h2 class="gl__title">
      Коды для звонков
    </h2>

    <div class="b-codes-for-calls__content-wrapper">
      {{#each b-codes-for-calls }}
        <div class="b-codes-for-calls__list-wrapper">
          <div class="b-codes-for-calls__title">
            {{ this.title }}
          </div>

          <ul class="b-codes-for-calls__list">
            {{#each list }}
              <li class="b-codes-for-calls__item">
                <div class="b-codes-for-calls__item-caption">
                  {{ this.caption }}
                </div>
                <div class="b-codes-for-calls__item-value">
                  {{ this.value }}
                </div>
              </li>
            {{/each}}
          </ul>
        </div>
      {{/each}}
    </div>
  </div>
</section>
