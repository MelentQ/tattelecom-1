<section class="news-list" id="news-list-host">
  <div class="gl__page-content">
    <div class="gl__title-head">
      <h2 class="gl__title">Новости</h2>
      <div class="gl__xs-hide">
        {{> common/controls/link-show-all text="Все новости" }}
      </div>
    </div>

    <div class="gl-slider js-swiper-3">
      <div class="gl-slider__container swiper-container js-swiper-container-3">
        <ul class="gl-slider__wrapper swiper-wrapper">
          {{#each news-list}}
            <li class="swiper-slide gl__white-container news-list__slide gl__link-arrow-container">
              <div class="news-list__slide-title">{{ this.title }}</div>
              <div class="news-list__slide-text">{{ this.text }}</div>
              <div class="gl__link-arrow-wrapper gl__link-arrow-block news-list__link-arrow-wrapper">
                <a href="" class="gl__link-arrow-link">
                  <svg width="26" height="26" aria-hidden="true" class="gl__link-arrow-icon">
                    <use xlink:href="#arrow-line-right"></use>
                  </svg>
                </a>
              </div>
            </li>
          {{/each}}
        </ul>
      </div>

      {{> common/controls/btns-slider}}
    </div>

    <div class="gl__xs-show">
      {{> common/controls/link-show-all text="Все тарифы" }}
    </div>
  </div>
</section>
